<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TITLE SECTION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingBottom="30dp"
                android:background="@color/colorPrimary"
                android:paddingTop="30dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="&quot;寵物管家&quot;"
                    android:id="@+id/textView1"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="貼近您與毛小孩的需求，毛小孩的資訊匯集處"
                    android:id="@+id/textView2"
                    android:layout_gravity="center"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="致力於開發出變裡的寵物服務"
                    android:id="@+id/textView3"
                    android:layout_gravity="center"
                    android:gravity="center" />

            </LinearLayout>

    <!-- THE REST SECTION -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="APP官方網站"
                    android:id="@+id/textView4"
                    android:padding="15dp"
                    android:textColor="#000000"
                    android:background="#e9e9e9"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="加入寵物管家大家庭,隨時收到最新的優惠活動"
                    android:id="@+id/textView5"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingRight="7dp"
                    android:paddingLeft="7dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LINE官方生活圈"
                    android:id="@+id/textView6"
                    android:padding="15dp"
                    android:textColor="#000000"
                    android:background="#e9e9e9"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="臉書粉絲團"
                    android:id="@+id/textView7"
                    android:padding="15dp"
                    android:textColor="#000000"
                    android:background="#e9e9e9"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="您的支持與鼓勵, 是我們改進的重要助力"
                    android:id="@+id/textView8"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingRight="7dp"
                    android:paddingLeft="7dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="給予平價鼓勵"
                    android:id="@+id/textView9"
                    android:padding="15dp"
                    android:textColor="#000000"
                    android:background="#e9e9e9"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="歡迎與我們連絡, 任何未來合作可能性"
                    android:id="@+id/textView10"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingRight="7dp"
                    android:paddingLeft="7dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="合作提案"
                    android:id="@+id/textView11"
                    android:padding="15dp"
                    android:textColor="#000000"
                    android:background="#e9e9e9"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="問題建議"
                    android:id="@+id/textView12"
                    android:padding="15dp"
                    android:textColor="#000000"
                    android:background="#e9e9e9"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>


</LinearLayout>